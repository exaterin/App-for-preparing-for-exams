<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semestral_Work.stat"
             Title="Statistics">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Padding="20,20,20,20">
            <StackLayout Orientation="Horizontal">
            <Label Text ="Solved tasks:" FontSize="25" TextColor="Black"></Label>
                <Label x:Name="solved"  FontSize="25" TextColor="Black"></Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text ="Skipped tasks:" FontSize="25" TextColor="Black"></Label>
                <Label x:Name="skipped" FontSize="25" TextColor="Black"></Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Correctness:" FontSize="25" TextColor="Black"></Label>
                <Label x:Name="winrate" FontSize="25" TextColor="Black"></Label>
            </StackLayout>

            
            <Button Text="Reset statistics" Margin="15" Clicked="reset_s" TextColor="White" VerticalOptions="CenterAndExpand"  HorizontalOptions="FillAndExpand"  BackgroundColor="#283959" CornerRadius="30"></Button>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>